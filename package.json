{
  "name": "million-lint-check",
  "version": "1.0.12",
  "description": "A command-line tool to verify if Million Lint is active in a project.",
  "main": "index.js",
  "files": [
    "dist/*"
  ],
  "bin": {
    "check": "dist/index.js"
  },
  "scripts": {
    "build": "npx tsc",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "keywords": [
    "million",
    "cli",
    "testing",
    "frontend"
  ],
  "author": "Karan Handa",
  "license": "ISC",
  "dependencies": {
    "@antfu/ni": "^0.21.12",
    "@million/lint": "^0.0.66",
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "puppeteer": "^22.4.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/**/*.{js,css}",
            "docs/**/*",
            "!**/*.map"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "semantic-release": "^23.0.2",
    "typescript": "^5.3.3"
  }
}
